<resources>
    <!--com.viettel.vpmt.mobiletv:-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextSans" parent="TextAppearance.AppCompat.Medium">
        <item name="typeFaceFont">@string/OpenSans</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- Box -->
    <style name="Box" parent="TextSans">
    </style>

    <style name="Box.Title">
        <item name="android:textSize">@dimen/box_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="typeFaceStyle">@string/Medium</item>
    </style>

    <style name="Box.SeeAll">
        <item name="android:textSize">@dimen/box_see_all_text_size</item>
        <item name="android:textColor">@color/see_all_text</item>
        <item name="typeFaceStyle">@string/Regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Video -->
    <style name="Video" parent="TextSans"></style>

    <style name="Video.ItemLayout">
        <item name="android:layout_width">@dimen/item_video_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Video.TVShowLayout">
        <item name="android:layout_width">@dimen/item_tivi_show_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Video.CoverImage">
        <item name="android:layout_width">@dimen/item_video_width</item>
        <item name="android:layout_height">@dimen/item_video_height</item>
    </style>
    <style name="Video.TVShow">
        <item name="android:layout_width">@dimen/item_tivi_show_width</item>
        <item name="android:layout_height">@dimen/item_tivi_show_height</item>
    </style>

    <!-- Film -->
    <style name="Film" parent="TextSans"></style>
    <style name="Film.ItemLayout">
        <item name="android:layout_width">@dimen/item_film_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Film.CoverImage">
        <item name="android:layout_width">@dimen/item_film_width</item>
        <item name="android:layout_height">@dimen/item_film_height</item>
    </style>

    <!-- Channel -->
    <style name="Channel" parent="TextSans"></style>

    <style name="Channel.ItemLayout">
        <item name="android:layout_width">@dimen/item_channel_width</item>
        <item name="android:layout_height">@dimen/item_channel_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_item_channel</item>
    </style>

    <style name="Channel.CoverImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Content item -->
    <style name="ContentItem" parent="TextSans"></style>
    <style name="ContentItem.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/item_content_title_text_size</item>
        <item name="typeFaceStyle">@string/Medium</item>
    </style>
    <style name="ContentItem.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/item_content_subtitle_text_size</item>
        <item name="typeFaceStyle">@string/Regular</item>
    </style>

    <!-- Play button -->
    <style name="PlayButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlayButton.Small">
        <item name="android:src">@drawable/ic_play_small_shadow</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyCustomTabPageIndicator" parent="Widget">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="android:textSize">12sp</item>
        <item name="footerColor">@color/red</item>
    </style>
    <style name="Widget.MyTitlepageIndicator">
        <item name="footerColor">@color/red</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerLineHeight">1.5dp</item>
        <item name="footerPadding">6dp</item>
        <item name="selectedColor">#ffffffff</item>
    </style>
</resources>
