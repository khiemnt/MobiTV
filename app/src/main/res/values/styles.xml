<resources>
    <!--com.viettel.vpmt.mobiletv:-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextSans" parent="TextAppearance.AppCompat.Medium">
        <item name="typeFaceFont">@string/OpenSans</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- Box -->
    <style name="Box" parent="TextSans">
    </style>

    <style name="Box.Title">
        <item name="android:textSize">@dimen/box_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="typeFaceStyle">@string/Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Box.SeeAll">
        <item name="android:textSize">@dimen/box_see_all_text_size</item>
        <item name="android:textColor">@color/see_all_text</item>
        <item name="typeFaceStyle">@string/Regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Video -->
    <style name="Video" parent="TextSans"></style>

    <style name="Video.ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin</item>
    </style>

    <style name="Video.CoverImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Film -->
    <style name="Film" parent="TextSans"></style>
    <style name="Film.ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin</item>
    </style>
    <style name="Film.CoverImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Channel -->
    <style name="Channel" parent="TextSans"></style>

    <style name="Channel.ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_item_channel</item>
    </style>

    <style name="Channel.CoverImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Content item -->
    <style name="ContentItem" parent="TextSans"></style>
    <style name="ContentItem.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/item_content_title_text_size</item>
        <item name="typeFaceStyle">@string/Medium</item>
    </style>
    <style name="ContentItem.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/item_content_subtitle_text_size</item>
        <item name="typeFaceStyle">@string/Regular</item>
    </style>

    <!-- Play button -->
    <style name="PlayButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlayButton.Small">
        <item name="android:src">@drawable/ic_play_small_shadow</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">@dimen/tab_padding_start</item>
        <item name="tabPaddingEnd">@dimen/tab_padding_end</item>
        <item name="android:layout_gravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_tab_title</item>
        <item name="android:textColor">@color/grey</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Player Controller -->
    <style name="IconPlayer">
        <item name="android:padding">7dp</item>
        <item name="android:layout_width">@dimen/item_play_size</item>
        <item name="android:layout_height">@dimen/item_play_size</item>
    </style>

    <style name="PlayerTimeText" parent="TextSans">
        <item name="typeFaceStyle">@string/Medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/screen_margin</item>
        <item name="android:paddingRight">@dimen/screen_margin</item>
        <item name="android:text">@string/default_time_mm_ss</item>
    </style>

    <style name="RadioButtonBlue">
        <item name="android:button">@drawable/bg_radio_button</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Detail-->
    <style name="Detail" parent="TextSans"></style>
    <style name="Detail.Title">
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="typeFaceStyle">@string/Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Detail.Desc">
        <item name="android:textSize">@dimen/detail_desc_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="typeFaceStyle">@string/Regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Detail.Desc.Regular">
        <item name="typeFaceStyle">@string/Regular</item>
    </style>
    <style name="Detail.Desc.SemiBold">
        <item name="typeFaceStyle">@string/Semibold</item>
    </style>
</resources>
