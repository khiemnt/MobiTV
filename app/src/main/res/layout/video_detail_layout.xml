<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_color">

    <VideoView android:layout_width="match_parent"
               android:layout_height="180dp"
               android:layout_marginBottom="5dp"
               android:id="@+id/video_detail_layout_video"/>
    <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/app_margin_left"
                      android:layout_marginRight="@dimen/app_margin_right"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:maxLines="2"
                      android:ellipsize="end"
                      android:textColor="@android:color/white"
                      android:id="@+id/fragment_video_detail_tvTitle"
                      android:textSize="@dimen/video_detail_title_size"
                      android:text="Thanh pho toi loiThanh pho toi loiThanh pho toi loiThanh pho toi loiThanh pho toi loiThanh pho toi loi"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_small"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginLeft="@dimen/margin_left_large">
                <CheckBox android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/video_detail_thumb_up_down"
                          android:background="@null"
                          android:checked="true"
                          android:text="1.280"
                          android:paddingLeft="@dimen/app_margin_left"
                          android:textColor="@color/white"
                          android:button="@drawable/thum_up_down_selector"/>
                <CheckBox android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/video_detail_number_of_view"
                          android:background="@null"
                          android:layout_marginLeft="@dimen/margin_left_medium"
                          android:layout_toRightOf="@id/video_detail_thumb_up_down"
                          android:enabled="false"
                          android:text="1.280.230"
                          android:paddingLeft="@dimen/app_margin_left"
                          android:textColor="@color/white"
                          android:button="@drawable/background_icon_view_video"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/fragment_video_detail_tvTitle"
                      android:id="@+id/fragment_video_detail_tvFullDes"
                      android:maxLines="3"
                      android:textSize="@dimen/video_detail_full_description_size"
                      android:layout_marginBottom="@dimen/padding_small"
                      android:ellipsize="end"
                      android:textColor="@android:color/white"
                      android:text="1chem gio  chem gio chem g45 45 545 io chem gio chem gio chemchem gio chem gio chemchem gio chem gio chemchem gio chem gio chemchem gio chem gio chem chem gio chem gio chem chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio chem gio 132456"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fragment_video_detail_tvActor"
                      android:textColor="@color/grey"
                      android:textSize="@dimen/video_detail_full_description_size"
                      android:layout_below="@id/fragment_video_detail_tvFullDes"
                      android:text="Tag: Antoine Griezman, Ronaldo"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/video_detail_full_description_size"
                      android:textColor="@color/grey"
                      android:id="@+id/fragment_video_detail_tvCountry"
                      android:layout_below="@id/fragment_video_detail_tvActor"
                      android:text="Giải đấu: Larada"
                      android:layout_marginBottom="3dp"/>
            <com.viewpagerindicator.TitlePageIndicator
                    android:id="@+id/sliding_tabs"
                    android:padding="10dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    style="@style/MyCustomTabPageIndicator"
                    android:layout_width="match_parent"/>
            <com.viettel.vpmt.mobiletv.screen.videodetail.view.WrapContentHeightViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg_color"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
