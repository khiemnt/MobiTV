<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llContent"
        android:orientation="vertical">
        <include
            android:id="@+id/player_root"
            layout="@layout/layout_player"/>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:id="@+id/mainScroll"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_marginRight="@dimen/app_margin_right"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/channel_detail_logo_iv"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <android.support.design.widget.TabLayout
                    android:id="@+id/sliding_tabs"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    style="@style/MyCustomTabLayout"
                    android:layout_width="match_parent"/>
                <com.viettel.vpmt.mobiletv.screen.filmdetail.utils.WrapContentHeightViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg_color"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View
        android:id="@+id/view_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#739E9E9E"/>
    <ProgressBar
        android:id="@+id/common_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>
